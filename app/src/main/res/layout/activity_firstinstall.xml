<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg">

    <LinearLayout
        android:id="@+id/aaa"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp60"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/ll_enable"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp50"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_bg_1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="@dimen/dp15"
                android:src="@drawable/allow"
                app:tint="@color/red" />

            <TextView
                android:id="@+id/iv_enable"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="@dimen/dp10"
                android:fontFamily="@font/fonts"
                android:gravity="center"
                android:text="Allow Keyboard"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_select"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="@dimen/dp50"
            android:layout_marginVertical="10dp"
            android:background="@drawable/btn_bg_1"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:padding="@dimen/dp15"
                android:src="@drawable/tick"
                app:tint="@color/green" />

            <TextView
                android:id="@+id/iv_select"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:elevation="@dimen/dp10"
                android:fontFamily="@font/fonts"
                android:gravity="center"
                android:text="Select Keyboard"
                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>
    </LinearLayout>



</RelativeLayout>
